@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
@if (!User.Identity.IsAuthenticated)
{
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Hello @User.Identity?.Name!</a>
        </li>

    @if (!User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Customers" asp-action="Profile">Profile</a>
        </li>
    }

    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="Admin">Admin Dashboard</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark font-weight-bold" asp-controller="Cars" asp-action="CreateCarListing">Add Car</a>
        </li>
    }

    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Customers" asp-action="Profile">Profile</a>
    </li>

    <li class="nav-item">
            <form class="form-check-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
    }

else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>

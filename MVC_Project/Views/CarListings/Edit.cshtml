@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@model MVC_Project.Models.CarListingViewModel

@{
    ViewData["Title"] = "Edit";
}
@if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
    {
    <h1>Edit</h1>

    <h4>CarListing</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CarId" />
                <div class="form-group">
                    <label asp-for="Make" class="control-label"></label>
                    <input asp-for="Make" class="form-control" />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PicturesRaw" class="control-label">Pictures by URL (one per line)</label>
                    <textarea asp-for="PicturesRaw" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="PicturesRaw" class="text-danger"></span>
                </div>
            
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="isAvailable" /> Available?
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    }

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
